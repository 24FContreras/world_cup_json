// Place all the styles related to the static controller here.
// They will automatically be included in application.css.
// You can use Sass (SCSS) here: http://sass-lang.com/

$base-font-size: 120%;
$base-line-height: 160%;
$body-font-color: #FFFEFF;
$body-font-family: "Lato", "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
$primary-color: #8fa3be;
$header-font-family: 'Lato', 'Helvetica', sans-serif;
$header-font-weight: 700;
$header-font-color: #FFFEFF;
$header-line-height: 1.4;
$h2-font-size: rem-calc(42);
$h3-font-size: rem-calc(27);
$h4-font-size: rem-calc(23);
$h5-font-size: rem-calc(18);
$h6-font-size: 1rem;
$button-font-color: #fff;
$button-bg: #9dcbff;

body {
background: image-url("bg.jpg") no-repeat center center fixed;
-webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  color: #FFFEFF;
}

h1, h2, h3, h4, h5, h6 {
  color: #FFFEFF;
}

.header {
  display: block;
  margin: 50px 0;
  height: 80px;
  background: white;
  background: rgba(255,255,255,.3);
  width: 100%;
  padding: 20px 0;

  img {
    width: 100px;
    margin: -30px auto 0;
    display: block;
  }
}

code {
  word-wrap: nowrap;
  font-size: 85%;
  color: white;
  padding: 5px;
  background: white;
  background: rgba(255,255,255,.2);
  border-radius: 4px;
  margin: 0 5px;
}

a {
  -ms-word-break: break-all;

     /* Be VERY careful with this, breaks normal words wh_erever */
     word-break: break-all;

     /* Non standard for webkit */
     word-break: break-word;

-webkit-hyphens: auto;
   -moz-hyphens: auto;
        hyphens: auto;
}

.footer {
  display: block;
  margin: 0;
  height: 100px;
  width: 100%;
  text-align: center;
  padding-bottom: 10px;

  ul {
    list-style-type: none;
    display: block;
    margin: 0 auto 30px;

    &:after {
      content: "";
      display: table;
      clear: both;
    }

    li {
      display: inline-block;
      padding: 0 10px;
      height: auto;
      vertical-align: middle;
      a {
        display: block;
        height: auto;
        img {
          vertical-align: top;
          height: 45px;
          width: 45px;
        }
      }
    }
  }
}

h1 {
  font-family: 'Lato';
  font-weight: 900;
  text-align: center;
  display: block;
  text-transform: uppercase;
  letter-spacing: 0.0825em;
}

h2 {
  @extend h1;
  font-weight: 400;
  font-style: italic;
  font-size: 26px;
  margin-bottom: 50px;
}

h3 {
  @extend h1;
  margin-bottom: 50px;
  margin-top: 50px;
}

.intro {
  text-align: center;
}

button {
  color: white;
}

.fa {color:white; font-size: 45px;}
.fa:hover {opacity: .7}
#sfg-logo {line-height: 0; vertical-align: top;}
#sfg-logo:hover {opacity:.7}
.live { text-align:center; background-color: rgba(255,255,255,0.3) }
.live img { width:25px; border-radius: 10%; margin:-2px 10px 0px 10px }
.match-result { text-align:center; background-color: rgba(255,255,255,0.1) }
